<Page x:Class="WpfApp4.Pages.Step1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Шаг 1. Выбор модели и двигателя"
            FontSize="18"
            Foreground="White"
            Margin="0,0,0,20"
            Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Модель автомобиля"
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="ModelComboBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Тип двигателя"
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="EngineComboBox" Height="30"/>

        </StackPanel>

        <Button Grid.Row="3"
        Content="Далее"
        Width="94"
        HorizontalAlignment="Right"
        Margin="0,30,0,0"
        Click="NextButton_Click"/>

    </Grid>
</Page>