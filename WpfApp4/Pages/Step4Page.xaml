<Page x:Class="WpfApp4.Pages.Step4Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Шаг 4. Расчёт кредита"
                   FontSize="24"
                   Foreground="White"
                   Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1">

            <TextBlock Text="Первоначальный взнос (%)"
                       Foreground="White"/>
            <ComboBox x:Name="DownPaymentComboBox"
                      SelectionChanged="Recalculate"
                      Height="30"
                      Margin="0,5,0,15">
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="30"/>
            </ComboBox>

            <TextBlock Text="Срок кредита (мес.)"
                       Foreground="White"/>
            <ComboBox x:Name="TermComboBox"
                      SelectionChanged="Recalculate"
                      Height="30"
                      Margin="0,5,0,20">
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="36"/>
                <ComboBoxItem Content="60"/>
            </ComboBox>

            <Border Background="#2A2A2A"
                    Padding="15"
                    CornerRadius="5"
                    Margin="0,10,0,20">
                <StackPanel>
                    <TextBlock x:Name="DownPaymentText"
                               Foreground="White"
                               FontSize="16"
                               Margin="0,5"/>

                    <TextBlock x:Name="CreditSumText"
                               Foreground="White"
                               FontSize="16"
                               Margin="0,5"/>

                    <TextBlock x:Name="MonthlyPaymentText"
                               Foreground="LightGreen"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,10"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Назад"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BackButton_Click"/>
            <Button Content="Далее"
                    Width="100"
                    Click="NextButton_Click"/>
        </StackPanel>

    </Grid>
</Page>