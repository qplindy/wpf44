<Page x:Class="WpfApp4.Pages.Step2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Шаг 2. Выбор цвета и опций"
                   FontSize="18"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Цвет кузова"
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="ColorComboBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Дополнительные опции"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <CheckBox x:Name="OptionClimate"
                      Content="Климат-контроль (+30 000 ₽)"
                      Foreground="White"
                      Margin="0,0,0,5"/>

            <CheckBox x:Name="OptionNavigation"
                      Content="Навигация (+20 000 ₽)"
                      Foreground="White"
                      Margin="0,0,0,5"/>

            <CheckBox x:Name="OptionParking"
                      Content="Парктроник (+25 000 ₽)"
                      Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Назад"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BackButton_Click"/>

            <Button Content="Далее"
                    Width="100"
                    Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Page>