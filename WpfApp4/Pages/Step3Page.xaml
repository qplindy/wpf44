<Page x:Class="WpfApp4.Pages.Step3Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Шаг 3. Итоговая конфигурация"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">

            <TextBlock x:Name="ModelText"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,5"/>

            <TextBlock x:Name="EngineText"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,5"/>

            <TextBlock x:Name="ColorText"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,5"/>

            <TextBlock Text="Дополнительные опции:"
                       Margin="0,20,0,5"
                       Foreground="White"
                       FontWeight="Bold"/>

            <TextBlock x:Name="OptionsText"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,5"/>

            <TextBlock Text="Итоговая стоимость:"
                       Margin="0,25,0,5"
                       Foreground="White"
                       FontWeight="Bold"/>

            <TextBlock x:Name="TotalPriceText"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Назад"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BackButton_Click"/>

            <Button Content="Далее"
                    Width="100"
                    Click="NextButton_Click"/>
        </StackPanel>

    </Grid>
</Page>